{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "react", "react-dom"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@engine/*": ["packages/engine/src/*"],
      "@api/*": ["services/api/src/*"],
      "@student/*": ["apps/student/src/*"],
      "@teacher/*": ["apps/teacher/src/*"]
    },
    "jsx": "react-jsx",
    "outDir": "dist"
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "services/**/*.ts",
    "services/**/*.tsx",
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "scripts/**/*.ts",
    "global.d.ts"
  ]
}
