# Backend API configuration for Code Adventurers
# Copy this file to `.env` and adjust the values for your local setup.

# General application settings
ENV=dev
PORT=8080
JWT_SECRET=dev-secret
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# MySQL connection
MYSQL_DSN=mysql://user:pass@tcp(localhost:3306)/code_adventurers?parseTime=true&charset=utf8mb4
MYSQL_MAX_OPEN_CONNS=16
MYSQL_MAX_IDLE_CONNS=8
MYSQL_CONN_MAX_LIFETIME=5m

# Redis / Asynq task queue
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
ASYNQ_CONCURRENCY=32
ASYNQ_QUEUES=default=10,critical=20

# Rate limiting
RATE_LIMIT_PER_MINUTE=600

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=
PROMETHEUS_METRICS_PATH=/metrics
