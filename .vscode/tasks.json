{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "frontend:dev",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "dev"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "webpack",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "ERROR in (.*?):(.*?)\\((\\d+),(\\d+)\\)",
          "file": 1,
          "line": 3,
          "column": 4,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "webpack is watching the files",
          "endsPattern": "webpack \\d+\\.\\d+\\.\\d+ compiled|failed to compile"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      }
    },
    {
      "label": "backend:build",
      "type": "shell",
      "command": "go",
      "args": [
        "build",
        "-o",
        "bin/api",
        "./cmd/api"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    },
    {
      "label": "backend:run",
      "type": "shell",
      "command": "go",
      "args": [
        "run",
        "./cmd/api"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "go",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.*?:.*?):(\\d+):(\\d*):?\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "api server starting",
          "endsPattern": "panic:|ERROR|WARN"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    },
    {
      "label": "fullstack:install-deps",
      "type": "shell",
      "command": "npm",
      "args": [
        "install"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      }
    },
    {
      "label": "frontend:install-deps",
      "type": "shell",
      "command": "npm",
      "args": [
        "install"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      }
    },
    {
      "label": "backend:install-deps",
      "type": "shell",
      "command": "go",
      "args": [
        "mod",
        "download"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    },
    {
      "label": "backend:test",
      "type": "shell",
      "command": "go",
      "args": [
        "test",
        "./..."
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    },
    {
      "label": "frontend:test",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "test"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      }
    },
    {
      "label": "fullstack:test",
      "type": "shell",
      "command": "echo",
      "args": [
        "Running full stack tests..."
      ],
      "group": "test",
      "dependsOn": [
        "backend:test",
        "frontend:test"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "Remove-Item",
      "args": [
        "-Recurse",
        "-Force",
        "frontend\\node_modules",
        "backend\\bin"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}